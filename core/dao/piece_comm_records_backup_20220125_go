package dao

import (
	"context"
	"time"

	"github.com/application-research/estuary-metrics/core/generated/model"

	"github.com/guregu/null"
	"github.com/satori/go.uuid"
)

var (
	_ = time.Second
	_ = null.Bool{}
	_ = uuid.UUID{}
)

// GetAllPieceCommRecordsBackup20220125 is a function to get a slice of record(s) from piece_comm_records_backup_20220125 table in the estuary database
// params - page     - page requested (defaults to 0)
// params - pagesize - number of records in a page  (defaults to 20)
// params - order    - db sort order column
// error - ErrNotFound, db Find error
func GetAllPieceCommRecordsBackup20220125(ctx context.Context, page, pagesize int64, order string) (results []*model.PieceCommRecordsBackup20220125, totalRows int, err error) {

	resultOrm := DB.Model(&model.PieceCommRecordsBackup20220125{})
	resultOrm.Count(&totalRows)

	if page > 0 {
		offset := (page - 1) * pagesize
		resultOrm = resultOrm.Offset(offset).Limit(pagesize)
	} else {
		resultOrm = resultOrm.Limit(pagesize)
	}

	if order != "" {
		resultOrm = resultOrm.Order(order)
	}

	if err = resultOrm.Find(&results).Error; err != nil {
		err = ErrNotFound
		return nil, -1, err
	}

	return results, totalRows, nil
}

// GetPieceCommRecordsBackup20220125 is a function to get a single record from the piece_comm_records_backup_20220125 table in the estuary database
// error - ErrNotFound, db Find error
func GetPieceCommRecordsBackup20220125(ctx context.Context, argData string) (record *model.PieceCommRecordsBackup20220125, err error) {
	record = &model.PieceCommRecordsBackup20220125{}
	if err = DB.First(record, argData).Error; err != nil {
		err = ErrNotFound
		return record, err
	}

	return record, nil
}

// AddPieceCommRecordsBackup20220125 is a function to add a single record to piece_comm_records_backup_20220125 table in the estuary database
// error - ErrInsertFailed, db save call failed
func AddPieceCommRecordsBackup20220125(ctx context.Context, record *model.PieceCommRecordsBackup20220125) (result *model.PieceCommRecordsBackup20220125, RowsAffected int64, err error) {
	db := DB.Save(record)
	if err = db.Error; err != nil {
		return nil, -1, ErrInsertFailed
	}

	return record, db.RowsAffected, nil
}

// UpdatePieceCommRecordsBackup20220125 is a function to update a single record from piece_comm_records_backup_20220125 table in the estuary database
// error - ErrNotFound, db record for id not found
// error - ErrUpdateFailed, db meta data copy failed or db.Save call failed
func UpdatePieceCommRecordsBackup20220125(ctx context.Context, argData string, updated *model.PieceCommRecordsBackup20220125) (result *model.PieceCommRecordsBackup20220125, RowsAffected int64, err error) {

	result = &model.PieceCommRecordsBackup20220125{}
	db := DB.First(result, argData)
	if err = db.Error; err != nil {
		return nil, -1, ErrNotFound
	}

	if err = Copy(result, updated); err != nil {
		return nil, -1, ErrUpdateFailed
	}

	db = db.Save(result)
	if err = db.Error; err != nil {
		return nil, -1, ErrUpdateFailed
	}

	return result, db.RowsAffected, nil
}

// DeletePieceCommRecordsBackup20220125 is a function to delete a single record from piece_comm_records_backup_20220125 table in the estuary database
// error - ErrNotFound, db Find error
// error - ErrDeleteFailed, db Delete failed error
func DeletePieceCommRecordsBackup20220125(ctx context.Context, argData string) (rowsAffected int64, err error) {

	record := &model.PieceCommRecordsBackup20220125{}
	db := DB.First(record, argData)
	if db.Error != nil {
		return -1, ErrNotFound
	}

	db = db.Delete(record)
	if err = db.Error; err != nil {
		return -1, ErrDeleteFailed
	}

	return db.RowsAffected, nil
}
